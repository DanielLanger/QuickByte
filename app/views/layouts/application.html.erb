<!DOCTYPE html>
<!-- paulirish.com/2008/conditional-stylesheets-vs-css-hacks-answer-neither/ -->
<!--[if lt IE 7 ]> <html class="ie6" lang="en"> <![endif]-->
<!--[if IE 7 ]>    <html class="ie7" lang="en"> <![endif]-->
<!--[if IE 8 ]>    <html class="ie8" lang="en"> <![endif]-->
<!--[if (gte IE 9)|!(IE)]><!--> <html lang="en"> <!--<![endif]-->
  <head>
  	<meta charset="utf-8" />

  	<!-- Uncomment to make IE8 render like IE7 -->
  	<!-- <meta http-equiv="X-UA-Compatible" content="IE=7" /> -->

  	<!-- Set the viewport width to device width for mobile -->
  	<meta name="viewport" content="width=device-width, initial-scale=1.0" />

  	<title>QuickByte</title>

  	<%= stylesheet_link_tag    "application" %>
  	<%= javascript_include_tag "vendor/custom.modernizr" %>
    <%= csrf_meta_tags %>
  </head>
  <body>
  <!-- Nav Bar -->
  <div class="wrapper">
	  <div class="row-full">
		<nav class="top-bar">
		<ul class="title-area">
          <li class="name">
            <h1><a href="/">QuickByte</a></h1>
          </li>
        </ul>
        <section class="top-bar-section">
		<ul class="right">	
		  <% if current_user %>
		    <li class="active"><a href="/meals"><%= current_user.name %></a></li>
			<li class="active"><%= button_to "Sign out", signout_path, id: "sign_out",class:"button" %></li>
		  <% end %>
		</ul>
		<% if current_user %>
		<ul style="position:absolute;margin-left:22%">
			<li class="has-form">
			<%= form_tag(:controller => "businesses", :action => "autoComp", :method => "post") do %>
			  <div class="row collapse">
				<div class="small-8 columns">
				 <label style="display:none" for="search">search: </label>
				  <%= text_field_tag 'search', '', :data => {autocomplete_source: Business.connection.select_values("SELECT name FROM businesses")}, :id => 'search' %>
				</div>
				<div class="small-4 columns">
				  <%= submit_tag 'Search', :class =>"button" %>
				</div>
			  </div>
			<% end %>
			</li>
		</ul>
		<% end %>
		</section>
		</nav>
	  </div>
	  <!-- End Nav -->

	<!-- Main Page Content -->
	  <div class="row">
		<!-- Main Blog Content -->
		<div class="large-12 columns" role="content">		
			  <%= yield %> 	
		</div>
		<!-- End Main Content -->
	  </div>
  </div>
  <%= javascript_include_tag "application" %>
  </body>
</html>
