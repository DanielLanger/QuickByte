<div class="panel">
	<div class="style:float-left">
		<%= button_to "New Meal", new_meal_path,:method => :get,class:"button" %>
	<h1 style="text-align:center">MealFeed</h1>
	
	
	<div>
		<% @meals.each do |m| %>
		<div class="row">
		<div class="large-9 columns">
			<table style="width:600px;text-align:center">
			  <tr>
				<th>Location</th>
				<th>Start Time</th>
				<th>End Time</th>
				<th>Host</th>
			  </tr>
			  <tr>
				<td width="30%"><%= Business.find_by_id(m.location).name %></td>
				<td width="20%"><%= l(m.start_time, :format => :short) %></td>
				<td width="20%"><%= l(m.end_time, :format => :short)%></td>
				<td width="20%"><%= User.find(m.host).name %></td>
			  </tr>
			</table>
		</div>
		<div class="large-2 columns">
			<button style="margin-top:10px;float:left"> Join! </button>
		</div>
		</div>
		<% end %>
	</div>
</div>

